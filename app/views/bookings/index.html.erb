<div class="container">
  <h3>Booking List</h3>
  <div class="row">
     <div class="col-xs-6">
        <% @bookings.each do |booking| %>
          <h4><%= link_to booking.id, booking_path(booking) %></h4>
          <p>Start date: <%= booking.start_date %></p>
          <p>Start date: <%= booking.end_date %></p>
          <p>Paid?: <%= booking.paid? %></p>
          <p>Status: <%= booking.status %></p>
          <hr>
        <% end %>
    </div>
    <%= link_to "Add a booking",  new_service_booking_path, class: "btn btn-primary"%>
  </div>
</div>
