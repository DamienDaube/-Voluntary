<div class="navbar-wagon navbar-fixed-top">

  <!-- Logo -->
  <%= link_to  image_tag("y.png", id: "logo"), new_user_session_path, class: 'navbar-wagon-brand' %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Agenda", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Wallet", new_qr_code_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Search bar -->
    <%= form_tag services_path, method: :get do %>
    <%= text_field_tag :query,
          params[:query],
          class: "form-control navbar-search",
            placeholder: "Find a service"
            %>
    <% end %>

      <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", 'data-toggle' => 'dropdown' %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a>Hi <%= current_user.first_name %> ! </li></a>
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fas fa-caret-square-down" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Agenda", user_path(current_user) %></li>
          <li><%= link_to "Wallet", new_qr_code_path %></li>
        </ul>
      </div>
    </div>
  </div>
