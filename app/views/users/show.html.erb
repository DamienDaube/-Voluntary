<div class="container">
  <h3>My Agenda</h3>
  <% 5.times do %>
  <div class="row" style="border-style: groove;">
    <div class="col-xs-2 col-sm-2 col-md-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
        <g class="nc-icon-wrapper" fill="#444444">
            <path d="M16.2 26.69l5.66-5.66L7.83 7c-3.12 3.12-3.12 8.19 0 11.31l8.37 8.38zm13.57-3.63c3.05 1.43 7.36.42 10.54-2.76 3.83-3.83 4.56-9.3 1.63-12.23C39 5.14 33.52 5.87 29.7 9.7c-3.18 3.18-4.18 7.49-2.76 10.54-4.45 4.44-19.53 19.52-19.53 19.52l2.83 2.83L24 28.83l13.76 13.76 2.83-2.83L26.83 26l2.94-2.94z"></path>
        </g>
      </svg>
    </div>

  <div class="row">

    <% if @user.role == "beneficiary" %>
      <% @bookings.each do |booking| %>
        <div class="col-md-6 col-md-offset-1">
          <p>Service: <%= booking.service.category %></p>
          <p>Provider: <%= booking.service.user.first_name %> <%= booking.service.user.last_name %></p>
          <p>Price: <%= booking.service.price %></p>
          <p>Date: <%= booking.start_date %></p>
          <p>Status= <%= booking.status %></p>
          <%= link_to "Cancel", booking_path(booking), method: :delete, class: 'btn btn-primary' %>
        </div>
      <% end %>

    <% elsif @user.role =="provider" %>
      <% @bookings.each do |booking| %>
        <div class="col-md-6 col-md-offset-1">
          <p>Customer: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
          <p>Date: <%= booking.start_date %></p>
          <p>Status= <%= booking.status %></p>
          <%= link_to "Confirm", booking_path(booking), method: :patch, class: 'btn btn-primary' %>
          <%= link_to "Cancel", booking_path(booking), method: :delete, class: 'btn btn-primary' %>
        </div>
      <% end %>

    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-1">
  <%= link_to "Back to service list", service_categories_path, class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
<%= link_to "Add a booking",  root_path, class: "btn btn-primary"%>
