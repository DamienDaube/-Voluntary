<div class="main-container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="cards-container">

        <% if @user.role == "beneficiary" %>

        <% @bookings.each do |booking| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url()">
          <div class="class card-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url()""></div>
          <div class="card-category"><%= booking.service.category %></div>

          <div class="card-description">
            <h2><%= booking.service.user.first_name %> <%= booking.service.user.last_name %></h2>
            <p><%= booking.service.price %> â‚¬</p>
            <p>Date: <%= booking.start_date %></p>
            <p>Status: <%= booking.status %></p>
          </div>

          <%= link_to "Cancel", booking_path(booking), method: :delete, class: 'btn btn-primary btn-lg' %>
        </div>

        <% end %>
      </div>
      <%= link_to "Back to service list", service_categories_path, class: 'btn btn-primary' %>

      <% elsif @user.role =="provider" %>

      <% @bookings.each do |booking| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url()">
        <div class="class card-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url()""></div>
        <div class="card-category">Customer: <%= booking.user.first_name %> <%= booking.user.last_name %></div>
        <div class="card-description">
          <h2>Date: <%= booking.start_date %></h2>
          <h2>Status= <%= booking.status %></h2>
          <%if booking.status == "Pending" %>
          <%= link_to "Confirm", booking_path(booking), method: :patch, class: 'btn btn-primary' %>
          <% end %>
        </div>
        <%= link_to "Cancel", booking_path(booking), method: :delete, class: 'btn btn-primary' %> </h2>
      </div>
      <% end %>
      <% end %>

    </div>
  </div>
</div>
</div>



